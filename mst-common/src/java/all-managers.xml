<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
		default-init-method="init">
		
	<bean name="BaseManager" abstract="true" class="xc.mst.manager.BaseManager">
	</bean>
	
	<bean name="Scheduler" class="xc.mst.scheduling.Scheduler" parent="BaseManager" />
	<bean name="Harvester" class="xc.mst.harvester.Harvester" parent="BaseManager" scope="prototype" />
	<bean name="HarvestRunner" class="xc.mst.harvester.HarvestRunner" parent="BaseManager" scope="prototype" />
	<!-- 
	<bean name="ServicesManager" class="xc.mst.manager.services.ServicesManager" parent="BaseManager" scope="singleton" />
	 -->
	<bean name="SingleThreaded" class="xc.mst.utils.index.SolrIndexManager" parent="BaseManager" scope="singleton" />
	<bean name="MultiThreaded" class="xc.mst.utils.index.ThreadedSolrIndexManager" parent="BaseManager" scope="singleton" />
	<bean name="Repository" class="xc.mst.repo.GenericRepository" parent="BaseManager" scope="prototype" />
	
	<alias name="${SOLRIndexer}" alias="SolrIndexManager" />
		
</beans>